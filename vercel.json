{
  "version": 2,
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "core/src/server.ts",
      "use": "@vercel/node",
      "config": {
        "installCommand": "cd core && npm install"
      }
    },
    {
      "src": "dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "cd dashboard && npm install"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/core/src/server.ts" },
    { "src": "/trpc/(.*)", "dest": "/core/src/server.ts" },
    { "src": "/(.*\\..+)", "dest": "/dashboard/$1" },
    { "src": "/(.*)", "dest": "/dashboard/index.html" }
  ]
}