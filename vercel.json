{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    { "src": "core/src/server.ts", "use": "@vercel/node" },
    { "src": "dashboard/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/core/src/server.ts" },
    { "src": "/(.*\\..+)", "dest": "/$1" },         
    { "src": "/(.*)", "dest": "/index.html" }    
  ]
}