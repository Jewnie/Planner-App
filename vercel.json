{
  "version": 2,
  "installCommand": "npm install --prefix core && npm install --prefix dashboard",
  "buildCommand": "cd core && npm run db:migrate && cd ..",
  "builds": [
    {
      "src": "core/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "cd dashboard && npm run build"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/core/src/server.ts" },
    { "src": "/trpc/(.*)", "dest": "/core/src/server.ts" },
    { "src": "/(.*\\..+)", "dest": "/dashboard/$1" },
    { "src": "/(.*)", "dest": "/dashboard/index.html" }
  ]
}
