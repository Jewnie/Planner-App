{
  "$schema": "https://openapi.vercel.sh/vercel/schemas/config.json",

  "builds": [
    {
      "src": "core/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "dashboard/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],

  "routes": [
    {
      "src": "^/assets/(.*)$",
      "dest": "/dashboard/assets/$1"
    },
    {
      "src": "^/api/(.*)$",
      "dest": "/core/src/server.ts"
    },
    {
      "src": "^(.*)$",
      "dest": "/dashboard/index.html"
    }
  ]
}
